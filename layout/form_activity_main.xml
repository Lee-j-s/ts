<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kdm"
    tools:context=".FormMainActivity"
    android:orientation="vertical">

    <!--상단 텍스트-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginStart="10dp" />

        </LinearLayout>
    </LinearLayout>


    <!--색상 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/choosecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonWhite"
                android:background="@drawable/basic_button"
                android:textSize="10sp" />

            <Button
                android:id="@+id/color_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonYellow"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonOrange"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonPink"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonRed"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonBrown"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonYellowgreen"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonGreen"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/color_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonBluishgreen"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonBlue"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonNavy"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonPurple"
                android:background="@drawable/basic_button"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonViolet"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonGray"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonBlack"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonTransparente"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--모양 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/chooseshape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/shape_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonCircle"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonOval"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonSemicircle"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonTriangle"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonSquare"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonDiamond"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            <Button
                android:id="@+id/shape_btn7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonRectangle"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonPentagon"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonHexagon"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonOctagon"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
            <Button
                android:id="@+id/shape_btn11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/buttonEct"
                android:background="@drawable/basic_button"
                android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--제형 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/choosetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/type_btn1"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonTablet"
                android:textSize="12sp" />

            <Button
                android:id="@+id/type_btn2"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonHardcapsule"
                android:textSize="12sp" />

            <Button
                android:id="@+id/type_btn3"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonSoftcapsul"
                android:textSize="12sp" />

            <Button
                android:id="@+id/type_btn4"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/basic_button"
                android:text="@string/buttonEct2"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <!--검색, 초기화버튼-->

    <!--식별자 표시 Edit-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TextFront"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/mark_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/markedit"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TextBack"
                    android:textSize="15dp"/>
                <EditText
                    android:id="@+id/mark_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/markedit"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sear"
                    android:onClick="click_result"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/researchbtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/resear"
                    android:onClick="click_research"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>