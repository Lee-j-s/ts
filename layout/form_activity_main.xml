<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kdm"
    tools:context=".FormMainActivity"
    android:orientation="vertical">

    <!--상단 텍스트-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text=""
                android:textSize="30sp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_marginStart="10dp" />

            <EditText
                android:id="@+id/item_name_edittext"
                android:layout_marginRight="15dp"
                android:layout_width="380dp"
                android:layout_height="45dp"
                android:hint="품목명을 입력하세요"
                android:inputType="text"
                android:maxLines="1" />


        </LinearLayout>
    </LinearLayout>


    <!--색상 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/choosecolor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_btn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="@string/buttonWhite"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <Button
                android:id="@+id/color_btn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonYellow"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                    android:background="@color/yellow"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonOrange"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                android:background="@color/orange"

                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonPink"
                android:fontFamily="@font/tae"
                android:background="@color/pink"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/buttonRed"
                android:fontFamily="@font/tae"
                android:background="@color/red"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/color_btn6"
                android:layout_width="wrap_content"
                android:fontFamily="@font/tae"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/brown"
                android:text="@string/buttonBrown"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="TextContrastCheck" />
            <Button
                android:id="@+id/color_btn7"
                android:fontFamily="@font/tae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonYellowgreen"
                android:textColor="@color/black"
                android:background="@color/wgreen"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/buttonGreen"
                android:fontFamily="@font/tae"
                android:background="@color/green"
                android:textSize="10sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/color_btn9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="TextContrastCheck"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="@string/buttonBluishgreen"
                android:fontFamily="@font/tae"
                android:background="@color/cgreen"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn10"
                android:layout_width="wrap_content"
                tools:ignore="TextContrastCheck"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/buttonBlue"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                android:background="@color/blue"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                tools:ignore="TextContrastCheck"
                android:background="@color/dblue"
                android:text="@string/buttonNavy"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="TextContrastCheck"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="@string/buttonPurple"
                android:fontFamily="@font/tae"
                android:background="@color/rpurple"
                android:textSize="10sp"/>

            <Button
                android:id="@+id/color_btn13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/purple"
                android:text="@string/buttonViolet"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/color_btn14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/gray"
                android:text="@string/buttonGray"
                android:fontFamily="@font/tae"
                android:textColor="@color/black"
                android:textSize="10sp"
                tools:ignore="TextContrastCheck" />
            <Button
                android:id="@+id/color_btn15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/black"
                android:text="@string/buttonBlack"
                android:fontFamily="@font/tae"
                tools:ignore="TextContrastCheck"
                android:textColor="@color/black"
                android:textSize="10sp"/>
            <Button
                android:id="@+id/color_btn16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:text="@string/buttonTransparente"
                android:fontFamily="@font/tae"
                android:textSize="10sp"/>
        </LinearLayout>
    </LinearLayout>

    <!--모양 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp" />

            <TextView
                android:id="@+id/chooseshape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shape_btn1"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/e1"
                android:layout_weight="1"
                android:textSize="10sp"
                android:fontFamily="@font/tae"
                android:text="원형"/>

            <Button
                android:id="@+id/shape_btn2"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e2"
                android:fontFamily="@font/tae"
                android:layout_weight="1"
                android:textSize="10sp"
                android:text="타원형" />
            <Button
                android:id="@+id/shape_btn3"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e3"
                android:fontFamily="@font/tae"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="반원형"
                />
            <Button
                android:id="@+id/shape_btn4"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:fontFamily="@font/tae"
                android:background="@drawable/e4"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="삼각형"/>
            <Button
                android:id="@+id/shape_btn5"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:fontFamily="@font/tae"
                android:background="@drawable/e5"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="사각형"
                />
            <Button
                android:id="@+id/shape_btn6"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:fontFamily="@font/tae"
                android:background="@drawable/e6"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="마름모"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/shape_btn7"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:fontFamily="@font/tae"
                android:background="@drawable/e7"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="장방형"
                />
            <Button
                android:id="@+id/shape_btn8"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e8"
                android:textSize="10sp"
                android:fontFamily="@font/tae"
                android:layout_weight="1"
                android:text="오각형"
                />

            <Button
                android:id="@+id/shape_btn9"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e9"
                android:textSize="10sp"
                android:fontFamily="@font/tae"
                android:layout_weight="1"
                android:text="육각형"
                />
            <Button
                android:id="@+id/shape_btn10"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e10"
                android:textSize="10sp"
                android:layout_weight="1"
                android:fontFamily="@font/tae"
                android:text="팔각형"
                />
            <Button
                android:id="@+id/shape_btn11"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/e11"
                android:fontFamily="@font/tae"
                android:textSize="10sp"
                android:layout_weight="1"
                android:text="기타"/>
        </LinearLayout>
    </LinearLayout>

    <!--제형 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="25sp"/>
            <TextView
                android:id="@+id/choosetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/blanktext">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/type_btn1"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/r1"
                android:fontFamily="@font/tae"
                android:text="정제류" />

            <Button
                android:id="@+id/type_btn2"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/r2"
                android:fontFamily="@font/tae"
                android:text="경질캡슐"
/>

            <Button
                android:id="@+id/type_btn3"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/r3"
                android:fontFamily="@font/tae"
                android:text="연질캡슐"/>

            <Button
                android:id="@+id/type_btn4"
                android:layout_width="105dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/r4"
                android:fontFamily="@font/tae"
                android:text="기타"
/>

        </LinearLayout>
    </LinearLayout>

    <!--검색, 초기화버튼-->

    <!--식별자 표시 Edit-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TextFront"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <EditText
                    android:id="@+id/mark_front"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/markedit"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/TextBack"
                    android:textSize="15dp"
                    tools:ignore="TextSizeCheck" />
                <EditText
                    android:id="@+id/mark_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/markedit"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/searchbtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/sear"
                    android:onClick="click_result"
                    tools:ignore="SpeakableTextPresentCheck"/>

                <Button
                    android:id="@+id/researchbtn"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/resear"
                    android:onClick="click_research"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>